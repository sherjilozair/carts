__lua__
left = ⬅️
up = ⬆️
right = ➡️
down = ⬇️

-- flying_animation = {1: 0.5, 2: 0.5}


function _init()
	player = {x = 64, y = 64}
	player.t,player.f,player.s=0,1,4 --tick,frame,step
 player.sp={1,1,1,1,2,2,2,2,2} --sprites
end

function _update60()
	if (btn(left)) player.x = player.x - 1
	if (btn(right)) player.x = player.x + 1
	if (btn(up)) player.y = player.y - 1
	if (btn(down)) player.y = player.y + 1
	animate(player)
end

function _draw()
	cls()
 spr(player.sp[player.f],player.x,player.y)
end





--animate an object
function animate(o)
 o.t=(o.t+1)%o.s --tick fwd
 if (o.t==0) o.f=o.f%#o.sp+1
end

